<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XF_IValueConverterSample.Converters;assembly=XF_IValueConverterSample"
             x:Class="XF_IValueConverterSample.View.ListViewConverterPage"
             Padding="15"
             Title="ListView Binding w/ Converter">
  <ContentPage.Resources>
    <ResourceDictionary>
      <local:StringToUpperConverter x:Key="s2uConverter" />
      <local:StringToIntConverter x:Key="s2iConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>

  <ListView ItemsSource="{Binding}" VerticalOptions="FillAndExpand">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding word, 
                         Converter={StaticResource s2uConverter}}"
                  Detail="{Binding word, 
                           Converter={StaticResource s2iConverter},
                           StringFormat='{0} letters'}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>

</ContentPage>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XF_CustomRenderer.UWP">
    <ControlTemplate x:Key="RoundedButton" TargetType="Button" >
        <Border CornerRadius="20" Background="#ddffdd">
            <ContentControl Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" MinHeight="30" />
        </Border>
    </ControlTemplate>
</ResourceDictionary>

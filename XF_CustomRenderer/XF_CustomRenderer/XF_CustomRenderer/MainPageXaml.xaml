<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XF_CustomRenderer;assembly=XF_CustomRenderer"
             x:Class="XF_CustomRenderer.MainPageXaml">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" 
                iOS="10, 30, 10, 10" 
                Android="10, 10, 10, 10"
                WinPhone="10, 10, 10, 10"/>
  </ContentPage.Padding>
  <StackLayout>
    <local:RoundedButton Text="Rounded Button" Clicked="ButtonClicked"/>
    <Button Text="Normal Button" BackgroundColor="#ffdddd" Clicked="ButtonClicked" />
  </StackLayout>
</ContentPage>